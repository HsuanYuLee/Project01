<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Style02">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30sp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Style03">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
